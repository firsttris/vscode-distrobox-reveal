{
  "name": "distrobox-reveal-in-explorer",
  "displayName": "Distrobox Reveal in File Explorer",
  "description": "Reveals the current file or folder in the host's file explorer when running inside Distrobox.",
  "version": "0.0.3",
  "publisher": "firsttris",
  "author": "Tristan Teufel",
  "repository": {
    "type": "git",
    "url": "https://github.com/firsttris/vscode-distrobox-reveal.git"
  },
  "icon": "folder.png",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "distrobox-reveal.reveal",
        "title": "Reveal in Host Explorer",
        "icon": "$(folder-opened)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "distrobox-reveal.reveal",
          "group": "navigation",
          "when": "resourceScheme == file"
        }
      ],
      "editor/title/context": [
        {
          "command": "distrobox-reveal.reveal",
          "group": "navigation",
          "when": "resourceScheme == file"
        }
      ],
      "editor/context": [
        {
          "command": "distrobox-reveal.reveal",
          "group": "navigation",
          "when": "resourceScheme == file"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "publish": "vsce publish $VERSION -m '%s [skip ci]' && ovsx publish -p $OVSX_PAT"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/node": "25.x",
    "typescript": "^5.9.3",
    "@vscode/vsce": "^3.7.1",
    "ovsx": "^0.10.8"
  }
}
